#: import gch kivy.utils.get_color_from_hex


<WalletScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            WalletBox:
                text : "Balance"


<Create_Wallet_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)
    


    MDGridLayout:
        adaptive_height: True


        cols: 2


        MDTextField:
            password: True
            size_hint_x: .5
            hint_text: "Password: "
            mode: "fill"        
            

<WalletBox>
    adaptive_height: True
    
    

    canvas.before:
        Color:
            rgba: gch("#ffffff")
        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:
        adaptive_height: True
        padding: dp(10)
        cols:3
        spacing: 10
        
        MDRoundFlatIconButton:
            icon: "wallet-outline"

            on_press: root.show_example_list_bottom_sheet()

            

            DecentraLabel:
                text: "Wallets"
                halign: "right"
                font_style: "Button"   
        

        MDRoundFlatIconButton:
            icon: "wallet-plus-outline"

            on_press: root.Wallet_Create()

            

            DecentraLabel:
                text: "Create Wallet"
                halign: "right"
                font_style: "Button" 

        MDRoundFlatIconButton:
            icon: "safe"

            on_press: root.reflesh_balance()

            

            DecentraLabel:
                text: root.text
                halign: "right"
                font_style: "Button" 
    
         
        
