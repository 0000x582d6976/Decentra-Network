#: import gch kivy.utils.get_color_from_hex


<WalletScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            WalletBox:
                text : "Balance: 0"

                
            

<WalletBox>
    adaptive_height: True
    
    

    canvas.before:
        Color:
            rgba: gch("#ffffff")
        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:
        adaptive_height: True
        padding: dp(10)
        cols:2
        spacing: 10
        
 
        

        MDRoundFlatIconButton:
            icon: "wallet-plus-outline"

            on_press: root.Wallet_Create()

            

            DecentraLabel:
                text: "Create Wallet"
                halign: "right"
                font_style: "Button" 

        MDRoundFlatIconButton:
            icon: "safe"

            on_press: root.reflesh_balance()

            

            DecentraLabel:
                text: root.text
                halign: "right"
                font_style: "Button" 
    
            
        
