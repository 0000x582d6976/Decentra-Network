#: import gch kivy.utils.get_color_from_hex


<NodeScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            NodeBox:
                
            
<start_node_server_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)
    


    MDGridLayout:
        adaptive_height: True


        cols: 2

        MDTextField:

            size_hint_x: .5
            hint_text: "IP: "
            mode: "fill"
        MDTextField:

            size_hint_x: .5
            hint_text: "PORT: "
            mode: "fill"

<add_unl_node_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)
    


    MDGridLayout:
        adaptive_height: True


        cols: 2

        MDTextField:

            size_hint_x: .5
            hint_text: "Public Key: "
            mode: "fill"


<NodeBox>
    adaptive_height: True
    

    canvas.before:
        Color:
            rgba: gch("#ffffff")
        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:
        padding: dp(10)
        spacing: 20
        adaptive_height: True
        cols: 3

        MDRoundFlatIconButton:
            icon: "server-network"
            on_press: root.start_node_server()
            width:240
            DecentraLabel:
                text: "Start Node Server"
                halign: "right"
                font_style: "Button"        
        MDRoundFlatIconButton:
            icon: "server-network-off"
            on_press: root.stop_node_server()
            width:240
            DecentraLabel:
                text: "Stop Node Server"
                halign: "right"
                font_style: "Button" 


        MDRoundFlatIconButton:
            icon: "lan-connect"
            on_press: root.connect_to_know_node()
            width:240
            DecentraLabel:
                text: "Connect to known nodes"
                halign: "right"
                font_style: "Button" 
        MDRoundFlatIconButton:
            icon: "server-plus"
            on_press: root.connect_a_node()
            width:240
            DecentraLabel:
                text: "Connect to a node"
                halign: "right"
                font_style: "Button" 

        
        MDRoundFlatIconButton:
            icon: "security-network"
            on_press: root.add_unl_node()
            width:240
            DecentraLabel:
                text: "Add UNL node"
                halign: "right"
                font_style: "Button"


        MDRoundFlatIconButton:
            icon: "semantic-web"
            on_press: root.get_block()
            width:240
            DecentraLabel:
                text: "Get the block from other unl nodes"
                halign: "right"
                font_style: "Button"
        MDRoundFlatIconButton:
            icon: "ip-network"
            on_press: root.get_node_list()
            width:240
            DecentraLabel:
                text: "Get full node list from UNL nodes"
                halign: "right"
                font_style: "Button"
        MDRoundFlatIconButton:
            icon: "shield-home"
            on_press: root.connect_to_main_network()
            width:240
            DecentraLabel:
                text: "Connect to main network"
                halign: "right"
                font_style: "Button"